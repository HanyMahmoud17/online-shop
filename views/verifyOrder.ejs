<%- include('parts/header')%>
<%- include('parts/navbar')%>

<div class="container">
  <form method="post" action="/order/save" class="text-center" style="padding-top: 10px;">
    <div class="form-group row">
      <label for="username" class="col-sm-2 col-form-label mb-3">Enter Your Name :</label>
      <div class="col-sm-10">
        <input type="text" name="username" class="form-control" id="username">
      </div>
    </div>
    <div class="form-group row">
      <label for="orderAddress" class="col-sm-2 col-form-label mb-3">Enter Address :</label>
      <div class="col-sm-10">
        <input type="text" name="orderAddress" class="form-control" id="orderAddress">
      </div>
    </div>
    <div class="form-group row">
      <label for="phone" class="col-sm-2 col-form-label mb-3">Enter Your Phone :</label>
      <div class="col-sm-10">
        <input type="number" name="phone" class="form-control" id="phone">
      </div>
    </div>
    <input type="hidden" name="cartId" value="<%= itemData.cartId %>">
    <input type="hidden" name="name" value="<%= itemData.name %>">
    <input type="hidden" name="price" value="<%= itemData.price %>">
    <input type="hidden" name="amount" value="<%= itemData.amount %>">
    <input type="hidden" name="image" value="<%= itemData.image %>">
    <input type="hidden" name="productId" value="<%= itemData.productId %>">
  
    <button type="submit" style="position: absolute;right: 100px;" class="btn btn-success">Add Order</button>
  </form>
</div>

<%- include('parts/footer')%>